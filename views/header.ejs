<header id="navigation" class="p-navigation is-dark">
    <div class="p-navigation__row">
        <div class="p-navigation__banner">
            <div class="p-navigation__logo">
                <a class="p-navigation__item" href="/">
                    <img class="p-navigation__image" src="https://pastebin.fi/img/favicon-white.svg" alt="Pastebin logo">
                </a>
            </div>
            <a href="#navigation" class="p-navigation__toggle--open" title="menu">Valikko</a>
            <a href="#navigation-closed" class="p-navigation__toggle--close" title="close menu">Sulje valikko</a>
        </div>
        <nav class="p-navigation__nav">
            <ul class="p-navigation__items">
                <li class="p-navigation__item">
                    <a class="p-navigation__link" href="/">Home</a>
                </li>
            </ul>
            <ul class="p-navigation__items">
                <% if (!(typeof username !== 'undefined')) { %>
                    <li class="p-navigation__item">
                        <a href="/login" class="p-navigation__link">Login</a>
                    </li>
                    <li class="p-navigation__item">
                        <a href="/register" class="p-navigation__link">Register</a>
                    </li>
                <% } else { %>
                    <li class="p-navigation__item">
                        <a href="/logout" class="p-navigation__link">Logout</a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>
</header>